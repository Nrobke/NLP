MDScreen:

    MDBottomNavigation:
        panel_color: "#071416"
        selected_color_background: "orange"
        text_color_active: "lightgrey"
        id: bottom_navigation


        MDBottomNavigationItem:
            md_bg_color: "#071416"
            name: 'screen 1'
            text: 'Gold and Wax'
            icon: 'brain'
            font_name: 'AmharicFont'

            BoxLayout:
                font_name: 'AmharicFont'
                orientation: 'vertical'
                ScrollView:
                    do_scroll_x: False
                    font_name: 'AmharicFont'
                    BoxLayout:
                        orientation: 'vertical'
                        padding: '10dp'
                        size_hint_y: None
                        height: self.minimum_height
                        spacing: '10dp'
                        font_name: 'AmharicFont'
                        id: question_container


        
        MDBottomNavigationItem:
            md_bg_color: "#071416"
            name: 'screen 2'
            text: 'History'
            icon: 'robot'
            font_name: 'AmharicFont'

            BoxLayout:
                orientation: 'vertical'
                MDScrollView:
                    do_scroll_x: False
                    MDGridLayout:
                        id: ask_ai_message
                        cols: 1
                        adaptive_height: True




        MDBottomNavigationItem:
            md_bg_color: "#071416"
            name: 'screen 3'
            text: 'Test Me'
            icon: 'cogs'
            font_name: 'AmharicFont'
            BoxLayout:
                font_name: 'AmharicFont'
                orientation: 'vertical'

                BoxLayout:
                    orientation: 'vertical'
                    MDScrollView:
                        do_scroll_x: False
                        MDBoxLayout:
                            orientation: 'vertical'
                            padding: dp(25)
                            spacing: dp(15)
                            id: chat_messages
                            adaptive_height: True

                MDBoxLayout:
                    orientation: 'horizontal'
                    adaptive_height: True
                    spacing: dp(10)
                    padding: dp(10)

                    MDTextField:
                        font_name: 'AmharicFont'
                        id: text_input
                        mode: "fill"
                        size_hint_x: .5
                        max_height: "200dp"
                        fill_color: 0, 0, 0, .1
                        multiline: True

                    MDIconButton:
                        icon: 'send'
                        on_release: app.send_message()

MDScreen:

    MDBottomNavigation:
        #panel_color: "#eeeaea"
        selected_color_background: "orange"
        text_color_active: "lightgrey"
        id: bottom_navigation

        MDBottomNavigationItem:
            name: 'screen 1'
            text: 'Ai'
            icon: 'brain'
            badge_icon: "numeric-3"
            font_name: 'AmharicFont'

            BoxLayout:
                font_name: 'AmharicFont'
                orientation: 'vertical'
                ScrollView:
                    do_scroll_x: False
                    font_name: 'AmharicFont'
                    BoxLayout:
                        orientation: 'vertical'
                        padding: '10dp'
                        size_hint_y: None
                        height: self.minimum_height
                        spacing: '10dp'
                        font_name: 'AmharicFont'
                        id: question_container

            MDFloatingActionButton:
                icon: "theme-light-dark"  # Replace with the appropriate icon
                pos_hint: {"right": 0.95, "top": 0.9}
                elevation_normal: 0  # Remove button elevation
                on_release: app.switch_theme()  # Call a function to switch the theme
        
        MDBottomNavigationItem:
            name: 'screen 2'
            text: 'Ask Ai'
            icon: 'robot'
            badge_icon: "numeric-10"
            font_name: 'AmharicFont'

            BoxLayout:
                orientation: 'vertical'
                MDScrollView:
                    do_scroll_x: False
                    MDGridLayout:
                        id: ask_ai_message
                        cols: 1
                        adaptive_height: True

            MDFloatingActionButton:
                icon: "theme-light-dark"  # Replace with the appropriate icon
                pos_hint: {"right": 0.95, "top": 0.9}
                elevation_normal: 0  # Remove button elevation
                on_release: app.switch_theme()  # Call a function to switch the theme


        MDBottomNavigationItem:
            name: 'screen 3'
            text: 'Test Me'
            icon: 'cogs'
            badge_icon: "numeric-5"
            font_name: 'AmharicFont'

            MDFloatingActionButton:
                icon: "theme-light-dark"  # Replace with the appropriate icon
                pos_hint: {"right": 0.95, "top": 0.9}
                elevation_normal: 0  # Remove button elevation
                on_release: app.switch_theme()  # Call a function to switch the theme

            BoxLayout:
                font_name: 'AmharicFont'
                orientation: 'vertical'

                ScrollView:
                    do_scroll_x: False
                    font_name: 'AmharicFont'
                    BoxLayout:
                        font_name: 'AmharicFont'
                        orientation: 'vertical'
                        id: chat_messages
                        spacing: dp(15)

                MDBoxLayout:
                    orientation: 'horizontal'
                    adaptive_height: True
                    spacing: dp(10)
                    padding: dp(10)

                    MDTextField:
                        font_name: 'AmharicFont'
                        id: text_input
                        mode: "fill"

                    MDIconButton:
                        icon: 'send'
                        on_release: app.send_message()